<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="#E6E5E5">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/loginapp">

        <TextView android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:text="@string/loginway"
                  android:layout_margin="5dp"
                  android:textColor="#000000"
                  android:textSize="20sp"
                  android:id="@+id/ways"/>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="20dp"
                      android:layout_below="@+id/ways">

            <ImageButton android:layout_width="match_parent"
                         android:layout_height="fill_parent"
                         android:id="@+id/applogin"
                         android:layout_gravity="center_vertical|center_horizontal"
                         android:src="@drawable/ic_launcher"
                         android:background="#00000000"
                         android:layout_weight="1"
                         android:onClick="onClick"/>

            <ImageButton android:layout_width="match_parent"
                         android:layout_height="fill_parent"
                         android:id="@+id/sinalogin"
                         android:layout_gravity="center_vertical|center_horizontal"
                         android:src="@drawable/logo_sinaweibo"
                         android:background="#00000000"
                         android:layout_weight="1"
                         android:onClick="onClick"/>

            <ImageButton android:layout_width="match_parent"
                         android:layout_height="fill_parent"
                         android:id="@+id/qqlogin"
                         android:layout_gravity="center_vertical|center_horizontal"
                         android:src="@drawable/logo_qq"
                         android:background="#00000000"
                         android:layout_weight="1"
                         android:onClick="onClick"/>

            <ImageButton android:layout_width="match_parent"
                         android:layout_height="fill_parent"
                         android:id="@+id/weixinlogin"
                         android:layout_gravity="center_vertical|center_horizontal"
                         android:src="@drawable/logo_wechat"
                         android:background="#00000000"
                         android:layout_weight="1"
                         android:onClick="onClick"/>

            <ImageButton android:layout_width="match_parent"
                         android:layout_height="fill_parent"
                         android:id="@+id/renrenlogin"
                         android:layout_gravity="center_vertical|center_horizontal"
                         android:src="@drawable/logo_renren"
                         android:background="#00000000"
                         android:layout_weight="1"
                         android:onClick="onClick"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    android:id="@+id/succeedlogin">

        <Button android:layout_width="wrap_content"
                  android:layout_height="30dp"
                  android:text="注销"
                  android:layout_alignParentRight="true"
                  android:layout_margin="10dp"
                  android:background="#ffffff"
                  android:textColorLink="#0000ff"
                  android:textColor="#0000ff"
                  android:id="@+id/logoutbtn"
                  android:onClick="onClick"/>

        <ImageView
                android:id="@+id/headimg"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/me"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>

        <TextView
                android:id="@+id/nichen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户昵称:xxx"
                android:layout_below="@+id/headimg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:textSize="20sp"/>


    </RelativeLayout>

    <View android:layout_width="fill_parent"
          android:layout_height="1dp"
            android:background="#000000"/>

    <RelativeLayout android:layout_width="fill_parent"
                  android:layout_height="50dp">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="fill_parent"
                  android:text="我的收藏"
                  android:textSize="25sp"
                  android:layout_margin="5dp"
                  android:gravity="center_vertical"
                  android:textColor="#000000"
                  android:layout_alignParentLeft="true"/>
        <ImageButton android:layout_width="40dp"
                     android:layout_height="40dp"
                     android:layout_centerVertical="true"
                     android:src="@drawable/click_right"
                     android:layout_alignParentRight="true"
                     android:layout_margin="5dp"
                     android:id="@+id/collection"
                     android:onClick="onClick"/>
    </RelativeLayout>

    <View android:layout_width="fill_parent"
          android:layout_height="1dp"
          android:background="#000000"/>

    <RelativeLayout android:layout_width="fill_parent"
                    android:layout_height="50dp">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="fill_parent"
                  android:text="我的评论"
                  android:textSize="25sp"
                  android:layout_margin="5dp"
                  android:gravity="center_vertical"
                  android:textColor="#000000"
                  android:layout_alignParentLeft="true"/>
        <ImageButton android:layout_width="40dp"
                     android:layout_height="40dp"
                     android:layout_centerVertical="true"
                     android:src="@drawable/click_right"
                     android:layout_alignParentRight="true"
                     android:layout_margin="5dp"
                     android:id="@+id/remark"
                     android:onClick="onClick"/>
    </RelativeLayout>

    <View android:layout_width="fill_parent"
          android:layout_height="1dp"
          android:background="#000000"/>

    <RelativeLayout android:layout_width="fill_parent"
                    android:layout_height="50dp">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="fill_parent"
                  android:text="反馈"
                  android:textSize="25sp"
                  android:layout_margin="5dp"
                  android:gravity="center_vertical"
                  android:textColor="#000000"
                  android:layout_alignParentLeft="true"/>
        <ImageButton android:layout_width="40dp"
                     android:layout_height="40dp"
                     android:layout_centerVertical="true"
                     android:src="@drawable/click_right"
                     android:layout_alignParentRight="true"
                     android:layout_margin="5dp"
                     android:id="@+id/feedback"
                     android:onClick="onClick"/>
    </RelativeLayout>

    <View android:layout_width="fill_parent"
          android:layout_height="1dp"
          android:background="#000000"/>

    <RelativeLayout android:layout_width="fill_parent"
                    android:layout_height="50dp">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="fill_parent"
                  android:text="关于"
                  android:textSize="25sp"
                  android:layout_margin="5dp"
                  android:gravity="center_vertical"
                  android:textColor="#000000"
                  android:layout_alignParentLeft="true"/>
        <ImageButton android:layout_width="40dp"
                     android:layout_height="40dp"
                     android:layout_centerVertical="true"
                     android:src="@drawable/click_right"
                     android:layout_alignParentRight="true"
                     android:layout_margin="5dp"
                     android:id="@+id/about"
                     android:onClick="onClick"/>
    </RelativeLayout>

    <View android:layout_width="fill_parent"
          android:layout_height="1dp"
          android:background="#000000"/>

    <RelativeLayout android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    >

        <TextView android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:textSize="10sp"
                  android:text="Copyright © 2014 - 2015 dingo Inc. All Rights Reserved\n随时掌握最新资讯，尽在NewsLooer!"
                  android:textColor="#000000"
                  android:layout_alignParentBottom="true"
                  android:gravity="center_horizontal"
                  android:layout_marginBottom="20dp"/>
    </RelativeLayout>

</LinearLayout>